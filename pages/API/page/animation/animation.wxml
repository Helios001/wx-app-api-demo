<import src="../../../templates/page-header.wxml"/>

<view class="page">
    <template is="pageHeadTemp" data="{{...page}}"/>

    <view class="page_bd">
        <view class="animation-wrap">
            <view class="animation-element" animation="{{animation}}"></view>
        </view>

        <view class="btn-area">
            <button type="primary" bindtap="rotateAndScale">旋转同时放大</button>
            <button type="primary" bindtap="rotateThenScale">先旋转后放大</button>
            <button type="primary" bindtap="rotateAndScaleThenTranslate">先旋转后放大然后平移</button>
            <button type="primary" bindtap="reset">复原</button>
        </view>

    </view>
</view>