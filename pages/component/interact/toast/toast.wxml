    <view class="page_bd">
        <view class="section">
            <toast hidden="{{toast1Hidden}}" bindchange="toast1Change">默认</toast>
            <button type="defaule" bindtap="toast1Tap">点击弹出默认toast</button>
        </view>
        <view class="section">
