<import src="../../../templates/page-header.wxml"/>

<view class="page">
    <template is="pageHeadTemp" data="{{...page}}"/>

    <view class="page_bd">
        <button type="default" size="{{defaultSize}}" loading="{{loading}}" plain="{{plain}}" bindtap="{{disabled}}" bindtap="default" hover-class="other-button-hover">default</button>

        <button type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" bindtap="{{disabled}}" bindtap="primary">primary</button>

        <button type="warn" size="{{warnSize}}" loading="{{loading}}" plain="{{plain}}" bindtap="{{disabled}}" bindtap="warn">warn</button>

        <button bindtap="setDisabled">点击设置以上按钮disabled属性</button>
        <button bindtap="setPlain">点击设置以上按钮plain属性</button>
        <button bindtap="setLoading">点击设置以上按钮loading属性</button>
    </view>
</view>